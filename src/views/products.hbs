{{>nav}}

    <div class="row">

    </div>  
    
    <main class="row menu">
    

    <div class="row justify-content-around categorias">
      <div class="col-12 col-sm-2">
        <h3 class="cat-til"><br>Categorías</h3>
          <ul class="lista-botones">
              <li><button class="boton" id="boton-bazar">Bazar</button></li>
              <li><button class= "boton" id="boton-cocina">Cocina</button></li>
              <li><button class= "boton" id="boton-electro">Electro</button></li>
              <li><button class= "boton"id="boton-audio">Audio</button></li>
              <li><button class= "boton" id="boton-todo" >Todo</button></li>
          </ul>
        </div>
        
    <div class="col-12 col-sm-10"><img src="./img/ventaonline.jpg" class="img-fluid"></div>
        
      
    </div>

    <div class="row justify-content-around mt-3 mb-3">
 {{#each productos}}
      <div class="col-5 col-sm-3 select-producto m-2 ms-0">
        <img src="./img/products/{{url}}" class="col-12 m-1 imagen-producto" alt="...">
        <h5 class="titulo-producto">{{nombre}}</h5>
        <h6>{{precio}}</h6>
        <p class="descripcion-produ">{{descripcion}}</p>
         <form action="/carrito" method="post">
                <input type="hidden" name="id" value={{id}}>
                <input type="hidden" name="nombre" value={{nombre}}>
                <input type="hidden" name="precio" value={{precio}}>
                <input type="hidden" name="url" value={{url}}>
                <input type="number" name="cantidad" min="1" max={{stock}} placeholder=Unidades>
                <button type="submit" >Agregar al carrito</button>
              </form>
      </div>
 {{/each}}
    
      
    </div>

    
  
  </main>
    
